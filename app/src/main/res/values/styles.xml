<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="ContactsToolBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_white_24dp</item>
    </style>

    <style name="actionOverflowButtonStyle" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/colorAccent</item>
    </style>


</resources>
